<%- include('partials/header') %>
<div class="newform">
   <h1>add new item</h1>
   <form action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
       <div class="form-group">
       <label for="name">Enter The Name Here</label>
       <input id="name" name="blog[title]" class="form-control" value="<%= blog.title %>" type="text">
       <div class="form-group">
       <label for="image">Enter the Image link Here</label>
       <input id="image" name="blog[image]" class="form-control" value="<%= blog.image %>" type="text">
       <div class="form-group">
       <label for="body">Enter The Name Here</label>
       <textarea 
                id="body" name="blog[body]" rows="5" cols="33" class="form-control">
           <%= blog.body %>
       </textarea>
        </textarea>
       </div>
       <button class="btn btn-lg btn-success btn-block">Submit</button>
   </form>
 </div>
 
<%- include('partials/footer') %>