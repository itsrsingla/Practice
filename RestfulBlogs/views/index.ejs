<%- include('partials/header') %>

<h1>All Blogs Are Here</h1>
<div class="row text-center">
<% blogs.forEach(function(blog){ %>


    <div class="col-md-4">
        <div class="thumbnail">
                <img src="<%= blog.image %>" class="img-rounded">
            <div class="caption">
                <h1> <%= blog.title %> </h1>
                <span><%= blog.created.toDateString() %> </span>
                <p><%= blog.body.substring(0,10) %>...</p>
            </div>
            <a href="/blogs/<%= blog._id %>" class="btn btn-large btn-warning">Read More</a>
        </div>    
    </div>

<% }) %>
</div>


<%- include('partials/footer') %>