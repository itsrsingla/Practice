<%- include('partials/header') %>

<div class="thumbnail text-center" style="width: 60%; margin: 0 auto;">
                <img src="<%= blog.image %>" class="img-rounded">
            <div class="caption">
                <h1> <%= blog.title %> </h1>
                <span><%= blog.created.toDateString() %> </span>
                <p><%- blog.body %></p>
            </div>
                <a href="/blogs/<%= blog._id %>/edit" class="btn btn-lg btn-primary"> Edit Blog</a>
        <form id="delete" action="/blogs/<%= blog.id %>?_method=DELETE" method="POST">
            <button class="btn btn-lg btn-danger">Delete Post</button>
        </form>
</div>

<%- include('partials/footer') %>
